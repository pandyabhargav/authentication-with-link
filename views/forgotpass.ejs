<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <section class="sing-poti bg-white">
      <div
        class="bg-header-img-2 col-12 d-flex justify-content-center align-items-center"
      >
        <div class="singup pt-50 col-12 text-center">
          <h2 class="pt-5">Forget password</h2>
          <p class="pb-5 text-white">
            <a href="/" class="px-1"
              ><i class="fa-sharp fa-solid fa-house"></i> Home</a
            >
            /
            <a href="/singup" class="px-1">Forget password</a>
          </p>
        </div>
      </div>

      <div class="container">
        <div
          class="row justify-content-center singup-main align-items-center signin"
        >
          <div class="p-5 col-12">
            <h2>Change password</h2>

            <!-- Display server-side error messages -->
            <% if (typeof error !== 'undefined') { %>
            <div class="text-danger"><%= error %></div>
            <% } %>

            <p>
              or
              <span>
                <a href="/login" class="text-orange"
                  >login to your account</a
                ></span
              >
            </p>

            <form action="/forgotPassword/<%= token %>" method="POST">
              <div class="row mb-3 py-3">
                <div class="form-group p-3">
                  <div class="input-icon">
                    <input
                      type="password"
                      placeholder="New Password"
                      name="New_password"
                      class="form-control px-5"
                      required
                    />
                    <i class="fa fa-lock icon"></i>
                  </div>
                </div>

                <div class="form-group p-3">
                  <div class="input-icon">
                    <input
                      type="password"
                      placeholder="Confirm password"
                      name="conf_password"
                      class="form-control px-5"
                      required
                    />
                    <i class="fa fa-lock icon"></i>
                  </div>
                </div>
              </div>

              <button class="w-100 bt1 rounded p-3" type="submit">
                Continue
              </button>
            </form>

            <div class="d-flex flex-wrap singup-foter py-3">
              By creating an account, I accept the
              <span class="highlight">Terms & Conditions & Privacy Policy</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
    <script>
      function togglePasswordVisibility(id) {
        const passwordInput = document.getElementById(id);
        const icon = passwordInput.nextElementSibling;
        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          icon.classList.remove("fa-eye");
          icon.classList.add("fa-eye-slash");
        } else {
          passwordInput.type = "password";
          icon.classList.remove("fa-eye-slash");
          icon.classList.add("fa-eye");
        }
      }
    </script>
  </body>
</html>
