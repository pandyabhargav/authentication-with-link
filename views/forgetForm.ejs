<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <section class="sing-poti bg-white">
        <div class="bg-header-img-2 col-12 d-flex justify-content-center align-items-center">
            <div class="singup pt-50 col-12 text-center">
                <h2 class="pt-5">Forgot Password</h2>
                <p class="pb-5 text-white">
                    <a href="/" class="px-1"><i class="fa-sharp fa-solid fa-house"></i> Home</a> /
                    <a href="/signup" class="px-1">Forgot Password</a>
                </p>
            </div>
        </div>

        <div class="container">
            <div class="row justify-content-center singup-main align-items-center col-12 signin">
                <div class="p-5 col-6">
                    <h2>Forgot Password</h2>

                    <!-- Display flash messages -->
                    <% if (success_msg && success_msg.length > 0) { %>
                        <div class="alert alert-success col-12" id="successMessage">
                            <%= success_msg %>
                        </div>
                    <% } %>
                    
                    <!-- Error message -->
                    <% if (error_msg && error_msg.length > 0) { %>
                        <div class="alert alert-danger" id="errorMessage">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <p>or <span><a href="/login" class="text-orange">login to your account</a></span></p>

                    <form action="/forgotform" method="POST">
                        <div class="row mb-3 py-3">
                            <div class="form-group p-3">
                                <div class="input-icon">
                                    <input
                                        type="email"
                                        placeholder="Enter Email"
                                        name="useremail"
                                        class="form-control px-5"
                                        required
                                    />
                                    <i class="fas fa-envelope icon"></i>
                                </div>
                            </div>
                        </div>

                        <button class="w-100 bt1 rounded p-3" type="submit">
                            Continue
                        </button>
                    </form>

                    <div class="d-flex flex-wrap singup-foter py-3 col-12">
                        By creating an account, I accept the <span class="highlight">Terms & Conditions & Privacy Policy</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <script>
        // Function to hide alert messages after 5 seconds
        setTimeout(() => {
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            
            if (successMessage) {
                successMessage.style.display = 'none';
            }
            if (errorMessage) {
                errorMessage.style.display = 'none';
            }
        }, 5000);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-aDcK1Tkz9kjM2e13X8vGtqJlv5wn4cy5XFX4p1JeO0Q5t8Jq/Q1u6PRbbFbmgI9FI+6GiHxAFMjO9KZ8/xG/1Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
